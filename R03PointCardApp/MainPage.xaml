<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="R03PointCardApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="ポイント管理アプリ" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

            <Label Text="Microsoftアカウントでログインしてください" FontSize="Title" Padding="30,10,30,10" x:Name="message"/>
        
        <Button Text="LOGINする" Clicked="Button_Clicked" x:Name="loginButton" IsVisible="true"/>
            <Button Text="LOGOUTする" Clicked="Button_Clicked_CLOSE" x:Name="logoutButton" IsVisible="false"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
